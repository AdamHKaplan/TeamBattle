<!-- show.html.erb -->
<h2><%= @team.name %></h2>

<ol id="teammates">
  <% @team.users.each do |user| %>
    <li><%= user.name %> <%= "- #{user.email} (captain)" if user.captain? %> <%= " (you)" if user.id == current_user.id %>
    </li>
  <% end %>
</ol>
<% unless current_team %>
  <%= button_to "Join team", @team, {method: :put} %>
<% end %>
