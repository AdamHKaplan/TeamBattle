<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>	  
  <p class="form-group">
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </p>
  <p class="form-group">
    <%= f.label :email, "Email" %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </p>
  
  <p class="form-group">
    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password, class: 'form-control' %>  
  </p>

  <p class="form-group">
    <%= f.label :password_confirmation, "Password Confirmation" %><br>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </p>

  <p><strong>For the next section, x+y+z must be less than or equal to 10. All 3 numbers must be non-negative.</strong></p>

  <p class="form-group">
    <%= f.label :x, "HP = 100 + (10 * x), where x is number below" %><br>
    <%= f.number_field :x, placeholder:"x", class: 'form-control' %>
  </p>

  <p class="form-group">
    <%= f.label :y, "Attack Power = 20 + y, where y is number below" %><br>
    <%= f.number_field :y, placeholder:"y", class: 'form-control' %>
  </p>

  <p class="form-group">
    <%= f.label :z, "Heal Power = 20 + z, where z is number below" %><br>
    <%= f.number_field :z, placeholder:"z", class: 'form-control' %>
  </p>


  <p class="form-group">
    <%= f.submit @user.new_record? ? "Sign up" : "Update Profile", class: 'btn btn-primary' %>
  </p>

<% end %>
