<!DOCTYPE html>
<html>
<head>
  <title>TeamBattle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <% if current_user %>
      Signed in as <%=  "#{current_user.name} (#{current_user.email})" %>
      <%= link_to "Sign out", sign_out_path, method: :delete %>
      <% team_captains_only do %>
        <%= link_to "New Game", new_team_captain_game_path %>
        <%= link_to "Team Captain", team_captain_team_path(current_user.team_id) %>
      <% end %>
    <% else %>
      <%= link_to "Sign up", new_user_path %>
      <%= link_to "Sign in", sign_in_path %>
    <% end %>
  </nav>
  <% flash.each do |key, value| %>
  <div class='flash' id='<%= key %>'>
    <%= value %>
  </div>
<% end %>
  <%= yield %>

  <footer>
    (Made by some buddy from California named <%= link_to "Adam", "http://www.itsakap.com" %>)
  </footer>
</body>
</html>
