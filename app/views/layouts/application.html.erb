<!DOCTYPE html>
<html>
<head>
  <title>TeamBattle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <%= link_to "Home", root_path %>
    <br>
    <% if current_user %>
      Signed in as <%=  "#{current_user.name} (#{current_user.email})" %>
      <%= link_to "Sign out", sign_out_path, method: :delete %>
      <br>
      <% team_captains_only do %>
        <% unless current_game %>
          <%= link_to "New Game", new_team_captain_game_path %>
          <br>
          <%= link_to "Join Game", team_captain_games_path %>
          <br>
          <!-- unless no games to join -->
        <% end %>
        <%= link_to "Team Captain", team_captain_team_path(current_user.team_id) %>
        <br>
      <% end %>
      <% if current_game %>
        <% in_game_only do %>
          <%= link_to "My Game", player_move_path %>
          <br>
        <% end %>
      <% end %>
      <% unless current_team %>
        <%= link_to "Create team", new_team_path %>
      <% else %>
        <%= link_to "My Team", current_team %>
      <% end %>
      <br>
      <%= link_to "View & Join a Team", teams_path %>
    <% else %>
      <%= link_to "Sign up", new_user_path %>
      <br>
      <%= link_to "Sign in", sign_in_path %>
      <br>
    <% end %>
  </nav>
  <% flash.each do |key, value| %>
  <div class='flash' id='<%= key %>'>
    <%= value %>
  </div>
<% end %>
  <%= yield %>

  <footer>
    <i>
    Made by some buddy from California named <%= link_to "Adam", "http://www.itsakap.com", target: "_blank" %>.  
    <%= link_to "View this project's GitHub repo",
        "http://www.github.com/adamhkaplan/TeamBattle",
        target: "_blank" %>
    </i>
  </footer>
</body>
</html>
